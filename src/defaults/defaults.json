{
    "debug": false,
    "caching": true,
    "timeout": 120,
    "palette": "desktop",
    "timezone": "America/New_York",
    "db": "default",
    "autofolder": false,
    "default-site": "default",
    "site-override": false,
    "charset": "UTF-8",
    "connections":  [{
        "host": "127.0.0.1",
        "db": "simplicity",
        "user": "simplicity",
        "pass": "simplicity",
        "driver": "mysql"      
    }
    ],
    "definition": {
        "layout": "system",
        "css": [
            
        ],
        "js": [
        ],
        "style": {
            "menu": {
                "fg": "white",
                "bg": "#8f3131"
            },
            "body": {
                "fg": "white",
                "bg": "#4f1f31"
            },
            "footer": {
                "fg": "white",
                "bg": "#411a2a"
            }
        },
        "vars": {
            "content": "default hello",
            "sidebar": "default sidebar",
            "title": "Simplicity Default",
            "description": "Simplicity Default Page",
            "logo": "{{themepath}}/default_logo.svg"    
            
        },
        "theme": "bootstrap",
        "check-language-files": true,
        "admin-theme": "bootstrap",
        "template": "main.tpl",
        "default-route": "default",
        "404-route": "notfound"
    },
    "default-layout": "system",
    "route-type": "page",
    "default-section": "content",
    "sections": {

    },
    "blocks": {
    },
    "layouts": {
        "system": {
            "name": "System Layout",
            "type": "system",
            "sections": {
                "header": {
                    "class": "header",
                    "file": "header.tpl"
                },
                "navigation": {
                    "class": "col-md-12",
                    "file": "navigation.tpl"
                },
                "content": {
                    "class": "content-section",
                    "file": "defaults.tpl"
                },
                "sidebar": {
                    "class": "sidebar-section",
                    "file": "defaults.tpl"
                },
                "footer": {
                    "class": "footer-section",
                    "file": "footer.tpl"
                }

            },
            "blocks": {
                "content": [
                    {
                        "type": "text",
                        "content-type": "html",
                        "section": "content",
                        "visible": true,
                        "content": "{{content}}"
                    }
                ]
            }
        }
    },

    "colors":  {
        "menu.foreground": "white",
        "menu.background": "#8f3131",
        "post.background": "white",
        "post.foreground": "black",
        "footer.foreground": "white",
        "footer.background": "#411a2a",
        "page.background": "#4f1f31",
        "page.foreground": "white",
        "title.background": "#335",
        "title.foreground": "#000"
    }
}
